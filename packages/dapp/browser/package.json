{
    "name": "@one-click-connect/browser-dapp",
    "version": "0.1.0-alpha.4",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "npx tsc -p tsconfig.build.json",
        "prebundle": "rimraf .turbo dist",
        "bundle": "tsup",
        "clean": "rimraf .turbo dist node_modules",
        "check-types": "npx tsc --noEmit",
        "lint": "eslint .",
        "test": "jest --passWithNoTests",
        "publish": "pnpm bundle && pnpm publish --access public"
    },
    "author": "Peersyst",
    "dependencies": {
        "@one-click-connect/core": "workspace:*",
        "@one-click-connect/dapp-core": "workspace:*",
        "assert": "^2.1.0",
        "buffer": "^6.0.3",
        "crypto-browserify": "^3.12.1",
        "events": "^3.3.0",
        "near-api-js": "^4.0.4",
        "os-browserify": "^0.3.0",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "stream-browserify": "^3.0.0",
        "url": "^0.11.4",
        "util": "^0.12.5"
    },
    "devDependencies": {
        "@shared/eslint": "workspace:*",
        "@shared/test": "workspace:*",
        "@shared/tsconfig": "workspace:*",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.19",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.4",
        "tsup": "^8.0.0",
        "typescript": "^5.7.3"
    },
    "peerDependencies": {
        "near-api-js": "^4.0.4"
    }
}
