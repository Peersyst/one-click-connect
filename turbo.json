{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "transit": {
            "dependsOn": ["^transit"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "test": {
            "dependsOn": ["transit"]
        },
        "clean": {
            "cache": false,
            "dependsOn": ["transit"]
        },
        "lint": {
            "dependsOn": ["transit"]
        },
        "check-types": {
            "dependsOn": ["transit"]
        },
        "bundle": {
            "dependsOn": ["^bundle"],
            "outputs": ["dist/**"]
        }
    }
}
